{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
    <form method="post" class="my-16 max-w-md m-auto">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="text-3xl font-bold underline">Please sign in</h1>
        <div class="flex flex-col my-8">
            <div class="flex flex-col my-8">
                <label for="inputEmail" class="font-semibold">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                       class="form-control bg-gray-50 text-black font-black rounded-md px-1 py-2 mt-3 focus:outline-none border-black-200 focus:ring focus:border-black-900"
                       autocomplete="email" required autofocus>
            </div>
            <div class="flex flex-col my-8">
                <label for="inputPassword" class="font-semibold">Password</label>
                <input type="password" name="password" id="inputPassword"
                       class="form-control bg-gray-50 text-black font-black  rounded-md px-1 py-2 mt-3 focus:outline-none border-black-200 focus:ring focus:border-black-900"
                       autocomplete="current-password"
                       required>
            </div>
            <div class="flex flex-col my-8">
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <button class="w-36 rounded-md py-3 px-6 text-center bg-blue-600 text-blue-50" type="submit">
                    Sign in
                </button>
            </div>
        </div>
    </form>
{% endblock %}
