{% extends 'base.html.twig' %}

{% block title %}Resident{% endblock %}

{% block body %}
    <h1>Resident</h1>
    <div class="w-full flex">
        <div class="w-1/3">
            {% if resident.picture is not empty %}
                <img src="{{ resident.picture }}" alt="" class="w-full"/>
            {% else %}
                <img src="{{ asset('images/emojis/elon-musk.png') }}" alt="" class="w-full"/>
            {% endif %}
        </div>
        <div class="w-2/3">
            <ul class="">
                <li>{{ resident.firstName }}</li>
                <li class="font-black">{{ resident.room }}</li>
                <li>Born: {{ resident.birthDate ? resident.birthDate|date('Y-m-d') : '' }}</li>
                <li>Nationality: {{ resident.nationality }} </li>
            </ul>
        </div>
    </div>

    <a href="{{ path('app_resident_index') }}">back to list</a>

    <a href="{{ path('app_resident_edit', {'id': resident.id}) }}">edit</a>

    {{ include('resident/_delete_form.html.twig') }}
{% endblock %}
