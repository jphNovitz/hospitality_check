<div{{ attributes }}>
    <twig:Title:H2>{% trans %}title.user.list{% endtrans%}</twig:Title:H2>
    <table class="w-full table-fixed gap-4">
        <thead>
        <tr class="mb-6 border-b border-b-2 ">
            <th class="w-20 md:w-1/3 text-left p-2">{% trans %}title.user.name{% endtrans%}</th>
            <th class="w-20 md:w-1/3 hidden md:table-cell text-left p-2">{% trans %}title.user.referees{% endtrans%}</th>
            <th class=" text-right p-2">
                <twig:Button:Primary class="!w-32 mr-1">{% trans %}button.add{% endtrans%}</twig:Button:Primary>
            </th>
        </tr>
        </thead>
        <tbody>
        {% for user in this.users %}
            <tr class="even:bg-black/5 dark:even:bg-white/5">
                <td class="w-24 md:w-1/3 p-2">{{ user.name }}</td>
                <td class="w-24 md:w-1/3 p-2">
                    {% for referee in user.referees %}
                        {{ referee.firstname }}
                    {% endfor %}
                </td>
                <td class="p-1 flex justify-end">
                    <twig:Button:Primary
                            class="!w-32 mr-1 inline-flex items-center justify-evenly">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                             stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"/>
                        </svg>

                        <span class="hidden lg:inline">{% trans %}button.update{% endtrans%}</span>
                    </twig:Button:Primary>
                    <twig:Button:Secondary
                            class="!w-32 border-red-800 text-red-800  inline-flex items-center justify-evenly ml-4">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                             stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"/>
                        </svg>

                        <span class="hidden lg:inline">{% trans %}button.delete{% endtrans%}</span>
                    </twig:Button:Secondary>

                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
</div>
