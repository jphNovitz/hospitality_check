<div class="w-full flex bg-black dark:bg-white overflow-hidden border-2 border-black">
    <div class="w-1/3 aspect-square bg-center bg-no-repeat bg-cover relative border-r border-white dark:border-black p-1"
            {% if resident.picture is not empty %}
                style="background-image: url('{{ asset('images/resident/' ~ resident.picture) }}')"
            {% else %}
                style="background-image: url('{{ asset('images/emojis/elon-musk.png') }}')"
            {% endif %}
    >
        <twig:Button:Primary
                class="!w-full p-4 absolute left-0 bottom-0 !bg-primary !text-black !dark:bg-primary !dark:text-white font-black rounded-b-none"
                href="{{ path('app_resident_show', {'id': resident.id}) }}">
            Voir
        </twig:Button:Primary>
    </div>
    <div class="w-2/3 text-left text-white dark:text-black p-4">
        <a href="{{ path('app_resident_show', {'id': resident.id}) }}">
            <twig:Title:H2>  {{ resident.firstName }}  </twig:Title:H2>
        </a>
        <ul class="h-auto flex flex-col ">
            <li class="leading-loose">Chambre <span class="w-6 h-6 justify-center items-center  inline-flex bg-white text-black dark:bg-black text-white  font-semibold rounded-full">{{ resident.room }}</span></li>
            <li class="leading-loose">Référent:<strong> {{ resident.referent.name }}</strong></li>
        </ul>
    </div>
</div>