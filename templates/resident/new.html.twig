{% extends 'base.html.twig' %}

{% block title %}New Resident{% endblock %}

{% block body %}
    <div class="border border-zinc-300 dark:border-stone-600 rounded-md p-5 pb-12">
        <h1>Welcome a new Resident</h1>
        {{ form_start(form) }}
        {{ form_row(form._token) }}
        {{ form_errors(form) }}
        <div class="flex flex-col my-3">
            {#                    {{ component('Form:RowText', {label: 'Picture', row: form.picture}) }} #}
            {{ form_row(form.imageFile) }}
            {{ form_errors(form.imageFile) }}
        </div>
        <div class="w-full flex flex-col lg:flex-row my-8 lg:space-x-4 my-3">
            <div class="w-full lg:w-6/12 m-auto">
                {{ component('Form:RowText', {label: 'First name', row: form.firstName}) }}
            </div>
            <div class="w-full lg:w-3/12 m-auto">
                {{ component('Form:RowText', {label: 'Nationality', row: form.nationality}) }}
            </div>
            <div class="w-full lg:w-3/12 m-auto">
                {{ component('Form:Date', {row: form.birthDate}) }}
                {#                    {{ component('Form:RowSelect', {label: ' ', row: form.birthDate.day}) }} #}
                {#                    {{ component('Form:RowSelect', {label: ' ', row: form.birthDate.month}) }} #}
                {#                    {{ component('Form:RowSelect', {label: ' ', row: form.birthDate.year}) }} #}
            </div>
        </div>
        <div class="w-full flex flex-col lg:flex-row my-8 lg:space-x-4 my-3">
            <div class="w-full lg:w-6/12 m-auto">
                {{ component('Form:RowSelect', {label: 'Referent', row: form.referent}) }}
            </div>
            <div class="w-full lg:w-3/12 m-auto">
                {{ component('Form:RowSelect', {label: 'Room', row: form.room}) }}
            </div>
            <div class="w-full lg:w-3/12 m-auto">
                {{ component('Form:RowText', {label: 'New Room', row: form.newRoom}) }}
            </div>
        </div>

        <div class="w-full  my-4 flex flex-col space-y-2 lg:flex-row lg:justify-start lg:space-y-0 lg:space-x-2 my-3">
            <twig:Button:Submit>{{ button_label|default('Save') }}</twig:Button:Submit>
            <twig:Button:Secondary href="{{ path('app_resident_index') }}"> back to list</twig:Button:Secondary>

        </div>

        {{ form_end(form, {'render_rest': false}) }}
        {#
        #}{#        Removed because in _form there is a trigger #}{#
        {{ include('resident/_form.html.twig') }} #}
    </div>
{% endblock %}
