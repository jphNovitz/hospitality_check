{% extends 'base.html.twig' %}

{% block title %}Resident{% endblock %}

{% block body %}
    <h1>Resident</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ resident.id }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ resident.picture }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ resident.firstName }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ resident.birthDate ? resident.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ resident.nationality }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_resident_index') }}">back to list</a>

    <a href="{{ path('app_resident_edit', {'id': resident.id}) }}">edit</a>

    {{ include('resident/_delete_form.html.twig') }}
