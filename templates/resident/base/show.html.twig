<div>
    <h2>Base bases</h2>
    {% if resident.bases  is not empty %}
        <div class="w-full grid grid-cols-2 gap-4">
            {% for base in resident.bases %}
                <div>
                    {% if base.icon is not empty %}
                        <img alt="{{ base.name }}"
                             src="{{ asset('images/base/'~base.icon) }}"
                             class="w-full aspect-square"/>
                    {% else %}
                        <div class="w-full aspect-square"> NO IMAGE</div>
                    {% endif %}
                    <span class="w-full inline-block text-center font-semibold text-xl">
                {{ base.name }}
            </span>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="p-6">
        Pas de préférences de bases ?!
        </div>
    {% endif %}
</div>
