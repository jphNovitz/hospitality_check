{% extends 'base.html.twig' %}

{% block title %}Edit Resident{% endblock %}

{% block body %}
    <div class="border border-zinc-300 dark:border-stone-600 rounded-md p-5" {{ stimulus_controller('form') }}>
        <h1>Edit Resident</h1>
        <button class="cursor-pointer" {{ stimulus_action('form', 'toggle', 'click') }}> click </button>
        <div class="w-full flex flex-nowrap overflow-hidden">
            <div class="flex basis-full grow-0 shrink-0 transition-opacity"  {{ stimulus_target('form', 'show') }}>
               {% block show %} {% endblock %}
            </div>
            <div class="flex basis-full grow-0 shrink-0 opacity-0" {{ stimulus_target('form', 'form') }}>
                {% block form %} {% endblock %}
            </div>
        </div>
        <a href="{{ path('app_resident_index') }}">back to list</a>

        {{ include('resident/_delete_form.html.twig') }}
    </div>
{% endblock %}